<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="WeatherCondition" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontAwesome-Regular}" />
        <Setter Property="FontSize" Value="55" />
        <Setter Property="Foreground" Value="#cccccc" />
    </Style>

    <Style x:Key="WeatherTemperature" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="Margin" Value="15 0 0 0" />
        <Setter Property="Foreground" Value="#cccccc" />
    </Style>

    <Style x:Key="WeatherTemperatureUnit" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Margin" Value="5 0 0 0" />
        <Setter Property="Foreground" Value="#cccccc" />
    </Style>

</ResourceDictionary>